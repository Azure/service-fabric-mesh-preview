{
  "schemaVersion": "0.0.1",
  "name": "SbzVoting",
  "description": "Voting SeaBreeze!",
  "services": [
    {
      "name": "VotingWeb",
      "description": "Seabreeze Voting Web service.",
      "osType": "linux",
      "codePackages": [
        {
          "name": "VotingWeb.Code",
          "image": "seabreeze/votingfrontend:1.0-Linux",
          "endpoints": [
            {
              "name": "Endpoint1",
              "port": 80
            }
          ],
          "environmentVariables": [
            {
              "name": "Voting_BackendHostName",
              "value": "votingdata"
            },
            {
              "name": "Voting_BackendHostPort",
              "value": "8080"
            }
          ],
          "resources": {
            "requests": {
              "cpu": 0.5,
              "memoryInGB": 1.0
            }
          }
        }
      ],
      "replicaCount": 1
    },
    {
      "name": "VotingData",
      "description": "Seabreeze Voting Data service.",
      "osType": "linux",
      "codePackages": [
        {
          "name": "VotingData.Code",
          "image": "seabreeze/votingdata:1.0-Linux",
          "endpoints": [
            {
              "name": "Endpoint1",
              "port": 8080
            }
          ],
          "environmentVariables": [
            {
              "name": "ASPNETCORE_URLS",
              "value": "http://*:8080"
            }
          ],
          "resources": {
            "requests": {
              "cpu": 0.5,
              "memoryInGB": 1.0
            }
          }
        }
      ],
      "replicaCount": 1
    }
  ]
}